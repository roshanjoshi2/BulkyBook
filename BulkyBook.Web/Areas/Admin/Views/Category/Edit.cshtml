@model Category
@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<form method="post" asp-asp-controller="Category" asp-action="Edit">
   
   
    <div class="border  p-3 mt-4">s
        <div class="row pb-2">
            <h2 class=" text-primary">Create category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class=" mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class=" text-danger"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class=" text-danger"></span>


        </div>
        @* <div class=" mb-3">
        <label asp-for="CreatedDateTime"></label>
        <input asp-for="CreatedDateTime" class="form-control" />
        </div>*@
        <button type="submit" class=" btn btn-primary" style="width:150px"> Edit</button>
        <a asp-controller="Category" asp-action="Index" class=" btn btn-secondary" style="width:150px">Back To list </a>
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



